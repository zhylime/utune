mixin image-hue(ops)
  - ops = ops || {}
  // - 
  .c-svg.c-svg--responsive.js-svg
    //- width=ops.width, height=ops.height
    svg#svgroot.c-image-hue(xmlns='http://www.w3.org/2000/svg', viewbox='0 0 #{ops.width} #{ops.height}', width='100%', height='100%', style='background-image: url(#{ops.img})')
      defs
        filter#filtersPicture
          fecomposite(result='inputTo_38', in='SourceGraphic', in2='SourceGraphic', operator='arithmetic', k1='0', k2='1', k3='0', k4='0')
          fecolormatrix#filter_38(type='saturate', values='0', data-filterid='38')
      image(id=ops.id, filter='url("#filtersPicture")', x='0', y='0', xmlns:xlink='http://www.w3.org/1999/xlink', xlink:href=ops.img, width='100%', height='100%', data-width=ops.width, data-height=ops.height)
