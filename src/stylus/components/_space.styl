.c-space
  &__header
    @media (max-width:1024px)
      height 600px
      min-height 600px
  &__footer
    background-color $col-white
    .c-chain__footer--line-before
    .c-chain__footer--line-after
      &:before
      &:after
        background-color $col-black
    &--line-after
    h2
      color $col-space-grey
    h3
      color $col-txt-blue
    .c-chain__footer--icon
      span
        color $col-txt-blue
  &__design
    color $col-white
    margin 1em auto
    &-p-r
      padding-right .5em
    &-p-l
      padding-left .5em
    &-row
      display table
      width 100%
      height 100%
      padding 0
    &-col
      display table-cell
      vertical-align top
      padding-bottom .6em
    &--item
      position relative
      &> img
        width 100%
        height 100%
        display block
      &:hover
        .c-space__design--item-mask
          opacity 1
          transition opacity  .6s
      &-mask
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        right 0
        bottom 0
        opacity 0
        &-bg
          background-color $col-bg-blue
          width 100%
          height 100%
          opacity .9
          position absolute
        &-txt
          position relative
          margin 0 auto
          top 35%
          img
            width 60px
            height 60px
          p
            min-width 300px
            margin 0 auto 1em auto
            line-height 1.5em
    &-btn
      padding .5em 3em
      border 1px solid $col-black
      font-size 1.5em
      line-height 1.5em
      max-width 350px
      cursor pointer
      margin 0 auto
      outline none