.c-masonry
  margin 60px auto 150px
  width 77%
  min-width $desktop-min
  img
    max-width 120px
    vertical-align middle
  &__item
    text-align center
    width 220px
    @media (min-width:1000px)
      width 200px
    @media (min-width:1441px)
      width 220px
    height 120px
    display inline-block
    i
      display-inline(middle)
      height 100%
    