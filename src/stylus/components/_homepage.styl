.c-homepage
  
  .inPanel
    opacity 1
    transition-duration .6s
  .outPanel
    opacity 0
    transition-duration .6s
  h2
    margin 140px auto 60px
    text-transform uppercase
  &__1
    background-image url("../img/homepage-utune-hero.jpg")
    background-size 100% 200%
    animation moveUpDown 15s infinite alternate linear
    svg
      opacity  0
  &__next-button
    position absolute
    bottom 30px
    left 50%
    margin-left -20px
    height 83px
    width 40px
    font-size 64px
    cursor pointer
  &__2
    background-color $col-bg-grey
  &__tab-1
  &__tab-2
  &__tab-3
  &__tab-4
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background-size cover
    background-repeat no-repeat
    opacity 0
  &__tab-1
    background-color $col-black
    overflow hidden
    opacity 1
    .jiguang
      position absolute
      left 0px
      bottom 0px
      right 0px
      top 0px
      width 100%
      height 100%
    .jiguang1
      animation jiguang-1 10s linear 0s infinite
    .jiguang2
      animation jiguang-2 15s linear 0s infinite
    .jiguang3
      animation jiguang-3 15s linear 0s infinite
      transform translateX(-20%)
      transform scaleX(-1)
    .star
      position absolute
      left -10%
      bottom 0px
      width 106%
      height 100%
      opacity .4
      // animation lang 30s linear 0s infinite
  &__tab-2
    background-image url("../img/background-wedo-tab2-stars.jpg")
    .star
      position absolute
      left -10%
      bottom 0px
      width 106%
      height 100%
      opacity .4
      // animation lang 30s linear 0s infinite
    .mirrors
      position absolute
      left 0
      bottom 0px
      width 100%
      height 100%
      opacity .8
      z-index 0
    canvas
      width 100%
      height 100%
      // position absolute
      transform 1s
      opacity 0.6
      position relative
      z-index 1
    &__mirror
      &__cover
        -webkit-mask-image url("../img/homepage-mirror-cover-1.png")
        background-color transparent
        width 100%
        height 100%
        -webkit-mask-size 100% 100%
        -webkit-mask-position 0
        position absolute
        top 0
        left 0
        overflow hidden
        &.active
          &:after
            content ""
            position absolute
            width 124px
            height 1570px
            left 0
            top 0
            opacity 0.6
            overflow hidden
            background-image url("../img/light.png")
            background-repeat no-repeat
            transform rotate(8deg)
            animation mirrowLight 10s linear 0s infinite
      &__cover-2
        @extend .c-homepage__tab-2__mirror__cover
        -webkit-mask-image url("../img/homepage-mirror-cover-2.png")
        &.active
          &:after
            transform rotate(45deg)
            animation mirrowLight 10s linear 2s infinite
      &__cover-3
        @extend .c-homepage__tab-2__mirror__cover
        -webkit-mask-image url("../img/homepage-mirror-cover-3.png")
        &.active
          &:after
            transform rotate(45deg)
            animation mirrowLight 10s linear 4.6s infinite
          
  &__tab-3
    background-image url("../img/background-wedo-water.jpg")
    .hill
    .lake
      position absolute
      left 0px
      right 0px
      top 0px
      bottom 0px
      width 100%
      height 100%
    .lang
      width 120%
      left -20%
      animation lang 9s linear 0s infinite
    .chuan
      animation chuan 20s linear 0s infinite
    .chuan2
      animation chuan2 24s linear 0s infinite
  &__tab-4
    background-image url("../img/background-wedo-hill.jpg")
    background-size 100% 100%
    min-width 1024px
    min-height 768px
    .star
      position absolute
      width 7px
      height 7px
      box-shadow 0 0 5px $col-white
      border-radius 50%
      outline none
      animation star 2s ease-in-out infinite
      animation-fill-mode both
      filter blur(1px)
    .star1
      left 25%
      top 15%
      animation-name star1
      animation-duration 3
    .star2
      left 15%
      top 25%
      animation-duration 1
    .star3
      left 6%
      top 35%
      animation-name star1
      animation-duration 1
    .star4
      left 20%
      top 50%
    .star5
      left 46%
      top 27%
      animation-name star1
      animation-duration 1
    .star6
      left 75%
      top 17%
      animation-duration 1
    .star7
      left 90%
      top 17%
      animation-name star1
      animation-duration 5
    .star8
      left 87%
      top 36%
      animation-duration 3
    .tree
      position absolute
      left 0px
      bottom 0px
      animation shake-leftright 50s ease-in-out infinite
    .tree1
      left -7%
      height 49%
      animation-name shake-leftright-2
    .tree2
      left 0%
      height 56%
    .tree3
      left 14%
      height 42%
    .tree4
      left 30%
      height 24%
      animation-name shake-leftright-2
    .tree5
      left 56%
      height 38%
    .tree6
      left 69%
      height 42%
    .tree7
      left 79%
      height 56%
      animation-name shake-leftright-2
  &__tab-panel
    position relative
    cursor pointer
    z-index 2
    ul
      width 984px
      margin auto
    li
      color white
      float left
      width 118px
      margin 0 50px
      opacity 0
    span
      margin 30px 0 20px
      display block
      // font-size 2em
    a
      display block
      text-decoration none
      color $col-white
    &__icon
      font-size 50px
    &__button
      border 1px solid white
      border-radius 15px
      // font-size 1.125em
      height 44px
      width 80px
      border-radius 44px
      line-height 44px
      margin auto
      cursor pointer
      &:hover
      &.active
        background-color white
        color black
    &.in
      li:nth-child(1)
        animation panel-animation 1s cubic-bezier(0.35, -0.1, 0.68, 1.1) 0s both
      li:nth-child(2)
        animation panel-animation 1s cubic-bezier(0.35, -0.1, 0.68, 1.1) .2s both
      li:nth-child(3)
        animation panel-animation 1s cubic-bezier(0.35, -0.1, 0.68, 1.1) .4s both
      li:nth-child(4)
        animation panel-animation 1s cubic-bezier(0.35, -0.1, 0.68, 1.1) .6s both
  &__3
    background-color $col-primary-grey
    &--main
      width 77%
      margin 0 auto
      background-color $col-white
  &__4
    background-color $col-primary-grey
    
  // contact section
  &__5
    background-image url("../img/background-contact.jpg")
    background-size cover
    background-repeat no-repeat
    color white
    h2
      margin 0px auto 100px


    &__email
    &__location
    &__phone
      display table-cell
      vertical-align top
      line-height 1.4em
      padding 4px 0 0 20px
      word-break break-all
      font-family $font-roboto-regular
    &__location
      padding-bottom 30px
    &__email
      a
        text-decoration none
        color white
        &:hover
          text-decoration underline
    
  &__6
    background-color $col-primary-grey
    position relative
    height 100%
    &--logo
      margin 160px auto
    img
      width 181px
      height 69px
    &--text
      font-size 20px
      line-height 1.5em
      span
        color $col-green
    &--footer
      font-size 16px
      line-height 1.5em
      margin-top 180px
      // margin-bottom 100px