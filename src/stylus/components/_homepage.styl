.c-homepage
  min-width $desktop-min
  h2
    margin 140px auto 60px
    text-transform uppercase
  &__1
    background-image url("../img/homepage-utune-hero.jpg")
    background-size 100% 110%
    animation moveUpDown 5s infinite
  &__next-button
    position absolute
    bottom 30px
    left 50%
    margin-left -20px
    height 83px
    width 40px
    font-size 64px
    cursor pointer
  &__tab-1
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background-image url("../img/background-wedo-star.jpg")
    background-size cover
    background-repeat no-repeat
  &__tab-panel
    position relative
    ul
      width 984px
      margin auto
    li
      color white
      float left
      width 118px
      margin 0 50px
    span
      margin 30px 0 20px
      display block
      // font-size 2em
    &__icon
      font-size 40px
    &__button
      border 1px solid white
      border-radius 15px
      // font-size 1.125em
      height 44px
      width 80px
      border-radius 44px
      line-height 44px
      margin auto
      cursor pointer
      &:hover
      &.active
        background-color white
        color black
  &__3
    background-color $col-primary-grey
    &--main
      width 77%
      margin 0 auto
      background-color $col-white
  &__4
    background-color $col-primary-grey
    
  
  // contact section
  &__5
    background-image url("../img/background-contact.jpg")
    background-size cover
    background-repeat no-repeat
    color white
    &__main
      max-width $desktop-min
      margin auto
      text-align left
    &__email
    &__location
    &__phone
      display table-cell
      vertical-align top
      line-height 1.4em
      padding 4px 0 0 20px
      word-break break-all
      font-family $font-roboto-regular
    &__location
      padding-bottom 30px
    &__email
      a
        text-decoration none
        color white
        &:hover
          text-decoration underline
    .font-icon-mail
    .font-icon-address
    .font-icon-phone
      font-size 50px
      width 50px
      display table-cell
      vertical-align top
  &__6
    background-color $col-primary-grey
    position relative
    height 100%
    &--logo
      margin 160px auto
    img
      width 181px
      height 69px
    &--text
      font-size 20px
      line-height 2em
      span
        color $col-green
    &--footer
      font-size 16px
      line-height 1.5em
      margin-top 180px
      margin-bottom 100px
