.c-homepage
  min-width 1024px
  &__1
    background-image url("../img/homepage-utune-hero.jpg")
    background-size 100% 110%
    animation moveUpDown 3s infinite
  &__next-button
    position absolute
    bottom 30px
    left 50%
    margin-left -20px
    height 83px
    width 40px
    font-size 64px
    cursor pointer
  &__tab-1
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background-image url("../img/background-wedo-star.jpg")
    background-size cover
    background-repeat no-repeat
  &__tab-panel
    position relative
    ul
      width 984px
      margin auto
    li
      color white
      float left
      width 118px
      margin 0 50px
    span
      margin 30px 0 20px
      display block
      // font-size 2em
    &__icon
      font-size 40px
    &__button
      border 1px solid white
      border-radius 15px
      // font-size 1.125em
      height 44px
      width 80px
      border-radius 44px
      line-height 44px
      margin auto
      cursor pointer
      &:hover
      &.active
        background-color white
        color black
  &__4
    background-color $col-primary-grey
    h2
      margin 140px auto 60px
      text-transform uppercase